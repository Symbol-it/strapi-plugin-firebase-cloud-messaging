{
  "routes": [
    {
      "method": "GET",
      "path": "/settings",
      "handler": "settings.get",
      "config": {
        "policies": [
          "admin::isAuthenticatedAdmin",
          ["admin::hasPermissions", ["plugins::firebase-cloud-messaging.settings.read"]]
        ]
      }
    },
    {
      "method": "POST",
      "path": "/",
      "handler": "fcm.subscribe",
      "config": {
        "policies": ["isEnabled"]
      }
    },
    {
      "method": "DELETE",
      "path": "/",
      "handler": "fcm.unsubscribe",
      "config": {
        "policies": ["isEnabled"]
      }
    }
  ]
}
